# Database
DATABASE_URL="postgresql://jooav:password@localhost:5432/jooav_erp_dev"
DATABASE_SCHEMA="public"

# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_PREFIX=api

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d
BCRYPT_ROUNDS=12

# Sentry Error Tracking
SENTRY_DSN=

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# Swagger
SWAGGER_TITLE="JOOAV ERP API"
SWAGGER_DESCRIPTION="Enterprise Resource Planning System API"
SWAGGER_VERSION="1.0"
SWAGGER_TAG="api"

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILENAME=logs/app.log
LOG_ERROR_FILENAME=logs/error.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14
LOG_DATE_PATTERN=YYYY-MM-DD

# Health Check
HEALTH_CHECK_TIMEOUT=1000
HEALTH_CHECK_GRACE_PERIOD=3000

# CORS
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DESTINATION=./uploads

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_URL=
CLOUDINARY_FOLDER=
CLOUDINARY_MAX_FILE_SIZE=10485760
CLOUDINARY_ALLOWED_FORMATS=jpg,jpeg,png,gif,webp,pdf,doc,docx,xls,xlsx

# Redis (Optional - for caching/sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_RETRY_ATTEMPTS=3
REDIS_RETRY_DELAY=1000