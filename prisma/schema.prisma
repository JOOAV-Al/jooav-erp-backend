// This is your Prisma schema file for JOOAV ERP System
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// generator dbml {
//   provider = "prisma-dbml-generator"
// }

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ================================
// CORE MODELS
// ================================

model User {
  id                String     @id @default(cuid())
  email             String     @unique
  username          String?    @unique
  password          String
  firstName         String?
  lastName          String?
  phone             String?
  avatar            String?
  role              UserRole   @default(WHOLESALER)
  status            UserStatus @default(ACTIVE)
  emailVerified     Boolean    @default(false)
  lastLogin         DateTime?
  passwordChangedAt DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  profile       UserProfile?
  sessions      UserSession[]
  activities    UserActivity[]
  createdOrders Order[]        @relation("CreatedBy")
  assignedOrders Order[]       @relation("AssignedProcurementOfficer")
  itemStatusUpdates OrderItem[] @relation("ItemStatusUpdatedBy")

  // JooavERP specific relations
  adminProfile              AdminProfile?
  wholesalerProfile         Wholesaler?
  procurementOfficerProfile ProcurementOfficerProfile?
  createdManufacturers      Manufacturer[]             @relation("CreatedManufacturers")
  updatedManufacturers Manufacturer[]     @relation("UpdatedManufacturers")
  deletedManufacturers Manufacturer[]     @relation("DeletedManufacturers")
  createdBrands        Brand[]            @relation("CreatedBrands")
  updatedBrands        Brand[]            @relation("UpdatedBrands")
  deletedBrands        Brand[]            @relation("DeletedBrands")
  createdVariants      Variant[]          @relation("CreatedVariants")
  updatedVariants      Variant[]          @relation("UpdatedVariants")
  deletedVariants      Variant[]          @relation("DeletedVariants")
  createdCategories    Category[]         @relation("CreatedCategories")
  updatedCategories    Category[]         @relation("UpdatedCategories")
  deletedCategories    Category[]         @relation("DeletedCategories")
  createdSubcategories Subcategory[]      @relation("CreatedSubcategories")
  updatedSubcategories Subcategory[]      @relation("UpdatedSubcategories")
  deletedSubcategories Subcategory[]      @relation("DeletedSubcategories")
  createdProducts      Product[]          @relation("CreatedProducts")
  updatedProducts      Product[]          @relation("UpdatedProducts")
  deletedProducts      Product[]          @relation("DeletedProducts")
  createdPackSizes     PackSize[]         @relation("CreatedPackSizes")
  updatedPackSizes     PackSize[]         @relation("UpdatedPackSizes")
  deletedPackSizes     PackSize[]         @relation("DeletedPackSizes")
  createdPackTypes     PackType[]         @relation("CreatedPackTypes")
  updatedPackTypes     PackType[]         @relation("UpdatedPackTypes")
  deletedPackTypes     PackType[]         @relation("DeletedPackTypes")

  @@map("users")
}

model UserProfile {
  id          String    @id @default(cuid())
  userId      String    @unique
  address     String?
  city        String?
  state       String?
  country     String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_profiles")
}

model UserSession {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?

  // Timestamps
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_sessions")
}

model PasswordReset {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)

  // Timestamps
  createdAt DateTime @default(now())

  @@map("password_resets")
}

model UserActivity {
  id         String  @id @default(cuid())
  userId     String
  action     String
  resource   String?
  resourceId String?
  metadata   Json?
  ipAddress  String?
  userAgent  String?

  // Timestamps
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_activities")
}

// ================================
// BUSINESS MODELS
// ================================

model Category {
  id          String         @id @default(cuid())
  name        String         @unique
  slug        String         @unique // URL-friendly name
  description String?
  status      CategoryStatus @default(ACTIVE)
  
  // Audit fields
  createdBy   String
  updatedBy   String
  deletedBy   String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  deletedAt   DateTime?
  
  // Relations
  subcategories   Subcategory[] @relation("CategorySubcategories")
  createdByUser   User          @relation("CreatedCategories", fields: [createdBy], references: [id])
  updatedByUser   User          @relation("UpdatedCategories", fields: [updatedBy], references: [id])
  deletedByUser   User?         @relation("DeletedCategories", fields: [deletedBy], references: [id])
  
  @@map("categories")
}

model Subcategory {
  id          String             @id @default(cuid())
  name        String             
  slug        String             @unique // URL-friendly name
  description String?
  categoryId  String
  status      SubcategoryStatus  @default(ACTIVE)
  
  // Audit fields  
  createdBy   String
  updatedBy   String
  deletedBy   String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  deletedAt   DateTime?
  
  // Relations
  category      Category  @relation("CategorySubcategories", fields: [categoryId], references: [id])
  products      Product[] @relation("SubcategoryProducts")
  createdByUser User      @relation("CreatedSubcategories", fields: [createdBy], references: [id])
  updatedByUser User      @relation("UpdatedSubcategories", fields: [updatedBy], references: [id])
  deletedByUser User?     @relation("DeletedSubcategories", fields: [deletedBy], references: [id])

  // Prevent duplicate subcategory names within same category
  @@unique([categoryId, name])
  @@map("subcategories")
}

model Variant {
  id          String  @id @default(cuid())
  name        String  // e.g., "Chicken", "Pepper Soup", "Classic Vanilla"
  description String? // Optional description for the variant
  brandId     String

  // Audit fields
  createdBy String
  updatedBy String
  deletedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  // Relations
  brand         Brand      @relation("BrandVariants", fields: [brandId], references: [id])
  products      Product[]  @relation("VariantProducts")
  packSizes     PackSize[] @relation("VariantPackSizes")
  packTypes     PackType[] @relation("VariantPackTypes")
  createdByUser User       @relation("CreatedVariants", fields: [createdBy], references: [id])
  updatedByUser User       @relation("UpdatedVariants", fields: [updatedBy], references: [id])
  deletedByUser User?      @relation("DeletedVariants", fields: [deletedBy], references: [id])

  @@map("variants")
}

model PackSize {
  id        String         @id @default(cuid())
  name      String         // e.g., "70g", "500ml", "1kg", "150g Family Pack"
  variantId String
  status    PackSizeStatus @default(ACTIVE)

  // Audit fields
  createdBy String
  updatedBy String
  deletedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  // Relations
  variant       Variant   @relation("VariantPackSizes", fields: [variantId], references: [id])
  products      Product[] @relation("PackSizeProducts")
  createdByUser User      @relation("CreatedPackSizes", fields: [createdBy], references: [id])
  updatedByUser User      @relation("UpdatedPackSizes", fields: [updatedBy], references: [id])
  deletedByUser User?     @relation("DeletedPackSizes", fields: [deletedBy], references: [id])

  // Prevent duplicate names per variant
  @@unique([variantId, name])
  @@map("pack_sizes")
}

model PackType {
  id        String         @id @default(cuid())
  name      String         // e.g., "Single Pack", "5-Pack", "Box", "PET Bottle", "Tin"
  variantId String
  status    PackTypeStatus @default(ACTIVE)

  // Audit fields
  createdBy String
  updatedBy String
  deletedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  // Relations
  variant       Variant   @relation("VariantPackTypes", fields: [variantId], references: [id])
  products      Product[] @relation("PackTypeProducts")
  createdByUser User      @relation("CreatedPackTypes", fields: [createdBy], references: [id])
  updatedByUser User      @relation("UpdatedPackTypes", fields: [updatedBy], references: [id])
  deletedByUser User?     @relation("DeletedPackTypes", fields: [deletedBy], references: [id])

  // Prevent duplicate names per variant
  @@unique([variantId, name])
  @@map("pack_types")
}

model Product {
  id              String        @id @default(cuid())
  
  // Basic Product Information
  name            String        @unique // User-provided product name (must be unique)
  description     String?
  sku             String        @unique // Auto-generated: Brand Variant PackSize (PackType)
  
  // Product Classification & Relations
  brandId         String
  variantId       String        // Links to Variant entity
  subcategoryId   String?       // Links to Subcategory (optional)
  manufacturerId  String        // Links to Manufacturer
  packSizeId      String        // Links to PackSize entity
  packTypeId      String        // Links to PackType entity
  
  // Pricing (Wholesale price)
  price           Decimal?      @db.Decimal(10,2)
  discount        Decimal?      @db.Decimal(5,2) // Discount percentage (0-100)
  
  // Media
  images          String[]      // Array of Cloudinary image URLs
  thumbnail       String?       // Cloudinary thumbnail image URL
  
  // Status
  status          ProductStatus @default(QUEUE)
  
  // Audit fields
  createdBy       String
  updatedBy       String
  deletedBy       String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  deletedAt       DateTime?
  
  // Relations
  brand           Brand         @relation("BrandProducts", fields: [brandId], references: [id])
  variant         Variant       @relation("VariantProducts", fields: [variantId], references: [id])
  subcategory     Subcategory?  @relation("SubcategoryProducts", fields: [subcategoryId], references: [id])
  manufacturer    Manufacturer  @relation("ManufacturerProducts", fields: [manufacturerId], references: [id])
  packSize        PackSize      @relation("PackSizeProducts", fields: [packSizeId], references: [id])
  packType        PackType      @relation("PackTypeProducts", fields: [packTypeId], references: [id])
  
  createdByUser   User          @relation("CreatedProducts", fields: [createdBy], references: [id])
  updatedByUser   User          @relation("UpdatedProducts", fields: [updatedBy], references: [id])
  deletedByUser   User?         @relation("DeletedProducts", fields: [deletedBy], references: [id])
  
  // Relations to other models
  orderItems      OrderItem[]
  stockMovements  StockMovement[]
  
  @@map("products")
}

model Order {
  id                 String         @id @default(cuid())
  orderNumber        String         @unique
  wholesalerId       String // Wholesaler who placed the order
  assignedProcurementOfficerId String? // Procurement officer handling procurement
  createdById        String
  status             OrderStatus    @default(DRAFT)
  
  // Assignment tracking
  assignmentStatus   AssignmentStatus? @default(UNASSIGNED)
  assignedAt         DateTime?      // When assignment was made
  assignmentNotes    String?        // Notes from admin during assignment
  assignmentRespondedAt DateTime?   // When officer responded
  assignmentResponseReason String? // Officer's response reason
  
  // Monnify Integration
  monnifyInvoiceRef  String?        @unique
  virtualAccounts    Json?          // Store virtual account details
  checkoutUrl        String?
  paymentExpiresAt   DateTime?
  
  // Simplified Financial
  subtotal           Decimal        @db.Decimal(10, 2)
  totalAmount        Decimal        @db.Decimal(10, 2)
  
  // Optional Delivery Address
  deliveryAddress    Json?          // Can be null
  customerNotes      String?

  // Key Timestamps
  orderDate          DateTime       @default(now())
  submittedAt        DateTime?      // When customer submitted
  confirmedAt        DateTime?      // When confirmed for processing

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  wholesaler         Wholesaler         @relation(fields: [wholesalerId], references: [id])
  assignedProcurementOfficer   User? @relation("AssignedProcurementOfficer", fields: [assignedProcurementOfficerId], references: [id])
  createdBy          User                @relation("CreatedBy", fields: [createdById], references: [id])
  items              OrderItem[]
  payments           Payment[]

  @@map("orders")
}

model OrderItem {
  id         String     @id @default(cuid())
  orderId    String
  productId  String
  
  // Quantity & Price
  quantity   Int        // Minimum 10 required
  unitPrice  Decimal    @db.Decimal(8, 2)
  lineTotal  Decimal    @db.Decimal(10, 2)  // unitPrice * quantity
  
  // Enhanced status tracking
  status           OrderItemStatus @default(PENDING)
  statusUpdatedAt  DateTime        @default(now())
  statusUpdatedBy  String?
  processingNotes  String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
  statusUpdatedByUser User? @relation("ItemStatusUpdatedBy", fields: [statusUpdatedBy], references: [id])

  @@unique([orderId, productId])
  @@map("order_items")
}

model Payment {
  id                String        @id @default(cuid())
  orderId           String
  order             Order         @relation(fields: [orderId], references: [id])
  
  // Monnify Integration
  monnifyInvoiceRef String        @unique
  transactionRef    String?       @unique
  paymentMethod     PaymentMethod?
  
  // Payment Details
  amount            Decimal       @db.Decimal(10, 2)
  currency          String        @default("NGN")
  status            PaymentStatus @default(PENDING)
  
  // Virtual Account Details
  virtualAccounts   Json?         // Store account numbers and bank details
  checkoutUrl       String?
  
  // Payment Tracking
  paidAt            DateTime?
  webhookData       Json?         // Store webhook payload
  
  // Reference and Notes
  reference         String?
  notes             String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payments")
}

model StockMovement {
  id        String            @id @default(cuid())
  productId String
  type      StockMovementType
  quantity  Int
  reason    String?
  reference String?

  // Timestamps
  createdAt DateTime @default(now())

  // Relations
  product Product @relation(fields: [productId], references: [id])

  @@map("stock_movements")
}

// ================================
// SYSTEM MODELS
// ================================

model SystemConfig {
  id    String @id @default(cuid())
  key   String @unique
  value Json

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_configs")
}

model AuditLog {
  id         String  @id @default(cuid())
  userId     String?
  action     String
  resource   String
  resourceId String?
  oldData    Json?
  newData    Json?
  ipAddress  String?
  userAgent  String?

  // Timestamps
  createdAt DateTime @default(now())

  @@map("audit_logs")
}

// ================================
// JOOAV ERP PLATFORM MODELS
// ================================

model AdminProfile {
  id               String    @id @default(cuid())
  userId           String    @unique
  permissions      Json? // Granular permissions for platform operations
  assignedRegions  String[] // Optional regions this admin manages
  lastActivity     DateTime?
  loginAttempts    Int       @default(0)
  accountLockUntil DateTime?

  // Permission flags - Only permissions that differentiate SUPER_ADMIN from ADMIN
  canModifySystemConfig  Boolean @default(false) // Only SUPER_ADMIN can modify system config
  canSuspendAdmins       Boolean @default(false) // Only SUPER_ADMIN can suspend other admins
  canChangeUserRoles     Boolean @default(false) // Only SUPER_ADMIN can change user roles
  canChangeUserEmails    Boolean @default(false) // Only SUPER_ADMIN can change user emails

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("admin_profiles")
}

model Region {
  id       String  @id @default(cuid())
  name     String  @unique
  code     String  @unique // e.g., "NG-LA" for Lagos, Nigeria
  country  String
  state    String?
  isActive Boolean @default(true)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  manufacturers Manufacturer[]
  wholesalers   Wholesaler[]
  procurementOfficers ProcurementOfficerProfile[]

  @@map("regions")
}

model Manufacturer {
  id          String  @id @default(cuid())
  name        String
  description String?

  // ERP Management
  status ManufacturerStatus @default(ACTIVE)

  // Audit fields
  createdBy String
  updatedBy String
  deletedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  // Relations
  brands        Brand[]   @relation("ManufacturerBrands")
  products      Product[] @relation("ManufacturerProducts")
  createdByUser User      @relation("CreatedManufacturers", fields: [createdBy], references: [id])
  updatedByUser User      @relation("UpdatedManufacturers", fields: [updatedBy], references: [id])
  deletedByUser User?     @relation("DeletedManufacturers", fields: [deletedBy], references: [id])
  region        Region?   @relation(fields: [regionId], references: [id])
  regionId      String?

  @@map("manufacturers")
}

model Brand {
  id             String      @id @default(cuid())
  name           String
  description    String?
  logo           String? // URL to brand logo
  manufacturerId String
  status         BrandStatus @default(ACTIVE)

  // Audit fields
  createdBy String
  updatedBy String
  deletedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  // Relations
  manufacturer  Manufacturer @relation("ManufacturerBrands", fields: [manufacturerId], references: [id])
  variants      Variant[]    @relation("BrandVariants")
  products      Product[]    @relation("BrandProducts")
  createdByUser User         @relation("CreatedBrands", fields: [createdBy], references: [id])
  updatedByUser User         @relation("UpdatedBrands", fields: [updatedBy], references: [id])
  deletedByUser User?        @relation("DeletedBrands", fields: [deletedBy], references: [id])

  @@map("brands")
}

model Wholesaler {
  id       String @id @default(cuid())
  userId   String @unique
  regionId String? // Optional for now, no impact on logic

  // Business metrics
  totalOrders Int     @default(0)
  totalSpent  Decimal @default(0) @db.Decimal(15, 2)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  region    Region?     @relation(fields: [regionId], references: [id])
  orders    Order[]
  inventory Inventory[]

  @@map("wholesalers")
}

model ProcurementOfficerProfile {
  id         String  @id @default(cuid())
  userId     String  @unique
  regionId   String? // Optional - no impact on logic for now
  employeeId String  @unique

  // Procurement officer details
  specializations String[] // e.g., ["Electronics", "Food & Beverages"]
  maxOrderValue   Decimal? @db.Decimal(15, 2)

  // Availability management
  availabilityStatus ProcurementOfficerStatus @default(AVAILABLE)
  maxActiveOrders Int @default(5) // Maximum concurrent orders

  // Performance metrics
  ordersProcessed       Int  @default(0)
  averageProcessingTime Int? // in hours

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user           User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  region         Region? @relation(fields: [regionId], references: [id])

  @@map("procurement_officer_profiles")
}

model Inventory {
  id           String          @id @default(cuid())
  wholesalerId String
  productName  String
  productSku   String
  currentStock Int             @default(0)
  minStock     Int             @default(0)
  maxStock     Int?
  status       InventoryStatus @default(IN_STOCK)

  // Auto-calculated fields
  lastOrderDate    DateTime?
  lastDeliveryDate DateTime?
  predictedRunOut  DateTime?
  consumptionRate  Decimal?  @db.Decimal(8, 2) // units per day

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  wholesaler Wholesaler          @relation(fields: [wholesalerId], references: [id], onDelete: Cascade)
  movements InventoryMovement[]

  @@unique([wholesalerId, productSku])
  @@map("inventory")
}

model InventoryMovement {
  id          String                @id @default(cuid())
  inventoryId String
  type        InventoryMovementType
  quantity    Int
  reason      String? // e.g., "Delivery", "Sale", "Adjustment"
  orderId     String?

  // Timestamps
  createdAt DateTime @default(now())

  // Relations
  inventory Inventory @relation(fields: [inventoryId], references: [id], onDelete: Cascade)
  // Note: Order relation removed for simplified system

  @@map("inventory_movements")
}

model AdminAuditLog {
  id         String       @id @default(cuid())
  adminId    String
  action     AdminAction
  resource   ResourceType
  resourceId String?
  regionId   String?

  // Audit details
  oldData   Json?
  newData   Json?
  metadata  Json?
  ipAddress String?
  userAgent String?

  // Timestamps
  createdAt DateTime @default(now())

  @@map("admin_audit_logs")
}

// ================================
// ENUMS
// ================================

enum UserRole {
  SUPER_ADMIN // Platform owner (Jooav management) - highest level
  ADMIN // Regional/operational admin
  PROCUREMENT_OFFICER // Procurement officers (can be regional or order-based)
  WHOLESALER // Wholesale business owners
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  PENDING_APPROVAL
  DEACTIVATED
  BLOCKED
}

enum ProductStatus {
  DRAFT
  QUEUE
  LIVE
  ARCHIVED
}

enum PackSizeStatus {
  ACTIVE
  ARCHIVED
}

enum PackTypeStatus {
  ACTIVE
  ARCHIVED
}

enum OrderStatus {
  DRAFT              // Customer building order
  CONFIRMED          // Payment verified, ready for assignment
  ASSIGNED           // Assigned to procurement officer
  IN_PROGRESS        // Officer actively working
  COMPLETED          // All items delivered
  CANCELLED          // Order cancelled
}

enum OrderItemStatus {
  PENDING           // Order placed, payment pending
  PAID              // Payment confirmed, ready for processing
  SOURCING          // Procurement team sourcing item
  READY             // Item ready for shipment
  SHIPPED           // Item shipped to customer
  DELIVERED         // Item delivered
  UNAVAILABLE       // Cannot fulfill this item
  CANCELLED         // Item cancelled
}

enum AssignmentStatus {
  UNASSIGNED        // No procurement officer assigned
  PENDING_ACCEPTANCE // Assigned but awaiting officer response
  ACCEPTED          // Officer accepted assignment
  REJECTED          // Officer rejected assignment
  REASSIGNED        // Previously rejected, now assigned to different officer
}

enum ProcurementOfficerStatus {
  AVAILABLE    // Ready to receive new orders
  UNAVAILABLE  // Not accepting new orders
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
}

enum PaymentMethod {
  BANK_TRANSFER
  CHECKOUT_URL
}

enum StockMovementType {
  IN
  OUT
  ADJUSTMENT
}


// JooavERP specific enums
enum ManufacturerStatus {
  PENDING_APPROVAL
  ACTIVE
  SUSPENDED
  INACTIVE
}

enum BrandStatus {
  ACTIVE
  INACTIVE
  DISCONTINUED
}

enum CategoryStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

enum SubcategoryStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

enum InventoryStatus {
  IN_STOCK
  LOW_STOCK
  OUT_OF_STOCK
  DISCONTINUED
}

enum InventoryMovementType {
  INBOUND // Stock received
  OUTBOUND // Stock sold/used
  ADJUSTMENT // Manual adjustment
  DAMAGED // Damaged goods
  EXPIRED // Expired products
}

enum AdminAction {
  // Authentication actions
  LOGIN_SUCCESS
  LOGIN_FAILED
  LOGOUT
  TOKEN_REFRESH
  TOKEN_REFRESH_FAILED

  // Administrative actions
  CREATE_MANUFACTURER
  APPROVE_MANUFACTURER
  SUSPEND_MANUFACTURER
  APPROVE_WHOLESALER
  REJECT_WHOLESALER
  ASSIGN_SUB_ADMIN
  UPDATE_ORDER_STATUS
  MANAGE_INVENTORY
  SYSTEM_CONFIG
  USER_MANAGEMENT
}

enum ResourceType {
  MANUFACTURER
  WHOLESALER
  SUB_ADMIN
  ORDER
  INVENTORY
  REGION
  SYSTEM_CONFIG
  ADMIN_AUTH
}
