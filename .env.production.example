# Example environment configuration for production
# Set these in your production environment

# Database Configuration
DATABASE_URL="postgresql://username:password@your-prod-db:5432/jooav_erp_prod"

# Redis Configuration for Production (Upstash)
UPSTASH_REDIS_REST_URL=https://your-upstash-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Application Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Security (Use strong secrets in production)
JWT_SECRET=your-super-strong-production-jwt-secret
JWT_EXPIRES_IN=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-prod-cloud-name
CLOUDINARY_API_KEY=your-prod-api-key
CLOUDINARY_API_SECRET=your-prod-api-secret

# Email Configuration
SMTP_HOST=your-production-smtp-host
SMTP_PORT=587
SMTP_USER=your-production-email
SMTP_PASS=your-production-smtp-password

# Cache Configuration
REDIS_RETRY_ATTEMPTS=3
REDIS_RETRY_DELAY=1000

# Monitoring & Observability
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100